<!DOCTYPE html>

<html class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Premier K9 - @ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/vendor.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">

    @RenderSection("AddToHead", required: false)
</head>
<body class="d-flex flex-column h-100" style="padding-top: 100px">
    <partial name="_NavbarPartial" />

    <main class="flex-shrink-0">
        <div class="container pt-3 text-dark">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-dark text-muted">
        <div class="container">
            <div class="d-flex flex-row justify-content-between">
                <div>&copy @System.DateTime.Now.Year Premier K9</div>
                <div>Website designed by Ozzie Gorbitz</div>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/js/vendor.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/vendor.min.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>